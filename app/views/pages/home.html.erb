<%= provide(:title, 'Home') %>

<% if signed_in? %>

	<div class="row">
		<div class="span4">
			<%= render 'shared/user_info' %>
			<%= render 'shared/micropost_form' %>
		</div>

		<div class="span8">
			<h3>Micropost feed</h3>
			<%= render 'shared/feed' %>
		</div>

	</div>

<% else %>

	<div class="hero-unit">
		<h1>Welcome</h1>
		<p>Welcome to my sample application!</p>
		<%= link_to 'Sign up', signup_path, class: 'btn btn-primary btn-large' %>
	</div>

	<div class="row">
		<div class="span8">
		</div>

		<div class="span4">
		</div>
	</div>

<% end %>