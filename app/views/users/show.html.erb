<% provide(:title, @user.name) %>

<div class="row">

	<div class="span4">
		<h1>
			<%= gravatar_for(@user) %>
			<%= @user.name %>
		</h1>
	</div>

	<div class="span8">
		<% if @user.microposts.any? %>
		<h3><%= @user.microposts.count %> Microposts</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
		<% else %>
			<p>No microposts</p>
		<% end %>
		<%= will_paginate(@microposts) %>
	</div>

</div>