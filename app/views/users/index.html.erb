<%= provide(:title, 'All Users') %>

<h1 class="center">All Users</h1>

<ul class="users">
	<%= will_paginate(@users) %>

	<% @users.each do |user| %>
		<li>
			<%= gravatar_for(user) %>
			<%= link_to(user.name, user) %>

			<% if current_user.admin? && user != current_user %>
				<p class="pull-right">
					<%= link_to("Delete", user, method: :delete, data: { confirm: "Are you sure?" }) %>
				</p>
			<% end %>

		</li>
	<% end %>

	<%= will_paginate(@users) %>
</ul>